{
  "version": 2,
  "buildCommand": "pnpm build:client",
  "outputDirectory": "dist/spa",
  "installCommand": "pnpm install",
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/:path((?!api).*)*",
      "destination": "/index.html"
    }
  ]
}
